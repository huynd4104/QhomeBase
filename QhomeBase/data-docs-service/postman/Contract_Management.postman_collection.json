		{
			"name": "2. Contract File Management",
			"item": [
				{
					"name": "Upload Single Contract File",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"contractFileId\", jsonData.id);",
									"    pm.environment.set(\"contractFileName\", jsonData.fileName);",
									"    console.log(\"File uploaded: \", jsonData.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": []
								},
								{
									"key": "isPrimary",
									"value": "true",
									"type": "text"
								},
								{
									"key": "uploadedBy",
									"value": "{{userId}}",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/api/contracts/{{contractId}}/files",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"contracts",
								"{{contractId}}",
								"files"
							]
						},
						"description": "Upload a single file (PDF, JPEG, PNG, HEIC) for a contract. Max size: 20MB"
					},
					"response": []
				},
				{
					"name": "Upload Multiple Contract Files",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    console.log(\"Files uploaded: \", jsonData.length);",
									"    if (jsonData.length > 0) {",
									"        pm.environment.set(\"contractFileId\", jsonData[0].id);",
									"        pm.environment.set(\"contractFileName\", jsonData[0].fileName);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "files",
									"type": "file",
									"src": []
								},
								{
									"key": "uploadedBy",
									"value": "{{userId}}",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/api/contracts/{{contractId}}/files/multiple",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"contracts",
								"{{contractId}}",
								"files",
								"multiple"
							]
						},
						"description": "Upload multiple files for a contract. First file will be set as primary."
					},
					"response": []
				},
