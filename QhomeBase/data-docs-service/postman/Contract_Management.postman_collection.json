			"item": [
				{
					"name": "Create RENTAL Contract",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"contractId\", jsonData.id);",
									"    pm.environment.set(\"contractNumber\", jsonData.contractNumber);",
									"    console.log(\"Contract created: \", jsonData.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"unitId\": \"{{unitId}}\",\n  \"contractNumber\": \"HD-RENTAL-{{$timestamp}}\",\n  \"contractType\": \"RENTAL\",\n  \"startDate\": \"2024-01-01\",\n  \"endDate\": \"2024-12-31\",\n  \"monthlyRent\": 5000000,\n  \"notes\": \"Hợp đồng thuê căn hộ (đã thanh toán đầy đủ)\",\n  \"status\": \"ACTIVE\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/contracts?createdBy={{userId}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"contracts"
							],
							"query": [
								{
									"key": "createdBy",
									"value": "{{userId}}"
								}
							]
						},
						"description": "Create a RENTAL contract. monthlyRent is REQUIRED."
					},
					"response": []
				},
