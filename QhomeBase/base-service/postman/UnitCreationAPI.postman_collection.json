	"item": [
		{
			"name": "1. Generate Test Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"console.log('Response status:', pm.response.code);",
							"console.log('Response body:', pm.response.text());",
							"",
							"if (pm.response.code === 200) {",
							"    try {",
							"        const response = pm.response.json();",
							"        console.log('Parsed response:', response);",
							"        ",
							"        if (response.token) {",
							"            pm.environment.set('jwt_token', response.token);",
							"            console.log('✅ Token saved successfully!');",
							"            console.log('Token (first 50 chars):', response.token.substring(0, 50) + '...');",
							"            console.log('Token length:', response.token.length);",
							"            ",
							"            pm.test('Token generated successfully', function () {",
							"                pm.expect(response.token).to.not.be.undefined;",
							"                pm.expect(response.token).to.be.a('string');",
							"                pm.expect(response.token.length).to.be.greaterThan(10);",
							"            });",
							"        } else {",
							"            console.log('❌ No token in response');",
							"            pm.test('Token exists in response', function () {",
							"                pm.expect(response.token).to.not.be.undefined;",
							"            });",
							"        }",
							"    } catch (error) {",
							"        console.log('❌ Error parsing response:', error);",
							"        pm.test('Response is valid JSON', function () {",
							"            pm.expect(pm.response.text()).to.be.a('string');",
							"        });",
							"    }",
							"} else {",
							"    console.log('❌ Failed to generate token. Status:', pm.response.code);",
							"    console.log('Response:', pm.response.text());",
							"    pm.test('Token generation successful', function () {",
							"        pm.expect(pm.response.code).to.eql(200);",
							"    });",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"uid\": \"{{user_id}}\",\n    \"username\": \"{{username}}\",\n    \"tenantId\": \"{{tenant_id}}\",\n    \"roles\": [\"tenant_manager\"],\n    \"permissions\": [\"base.unit.create\"]\n}"
				},
				"url": {
					"raw": "{{iam_service_url}}/api/test/generate-token",
					"host": [
						"{{iam_service_url}}"
					],
					"path": [
						"api",
						"test",
						"generate-token"
					]
				},
				"description": "Tạo JWT token để test các API cần authentication"
			},
			"response": []
		},
		{
			"name": "2. Create Unit - Basic (Tầng 1)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    pm.environment.set('unit_id', response.id);",
							"    console.log('Unit created:', response.id);",
							"    console.log('Unit code:', response.code);",
							"    ",
							"    pm.test('Status is ACTIVE', function () {",
							"        pm.expect(response.status).to.eql('ACTIVE');",
							"    });",
							"    pm.test('Tenant ID matches', function () {",
							"        pm.expect(response.tenantId).to.eql(pm.environment.get('tenant_id'));",
							"    });",
							"    pm.test('Building ID matches', function () {",
							"        pm.expect(response.buildingId).to.eql(pm.environment.get('building_id'));",
							"    });",
							"    pm.test('Code is generated correctly', function () {",
							"        pm.expect(response.code).to.match(/^A1\\d{2}$/); // A101, A102, A103...",
							"    });",
							"    pm.test('Floor is 1', function () {",
							"        pm.expect(response.floor).to.eql(1);",
							"    });",
							"    pm.test('Area matches', function () {",
							"        pm.expect(response.areaM2).to.eql(50.5);",
							"    });",
							"    pm.test('Bedrooms matches', function () {",
							"        pm.expect(response.bedrooms).to.eql(2);",
							"    });",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"tenantId\": \"{{tenant_id}}\",\n    \"buildingId\": \"{{building_id}}\",\n    \"floor\": 1,\n    \"areaM2\": 50.5,\n    \"bedrooms\": 2\n}"
				},
				"url": {
					"raw": "{{base_service_url}}/api/units",
					"host": [
						"{{base_service_url}}"
					],
					"path": [
						"api",
						"units"
					]
				},
				"description": "Tạo căn hộ cơ bản ở tầng 1 - code sẽ được generate tự động (A101)"
			},
			"response": []
		},
